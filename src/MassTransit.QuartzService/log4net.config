<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <root>
    <level value="ERROR" />
    <appender-ref ref="console" />
    <appender-ref ref="logFile" />
  </root>

  <logger name="Topshelf" additivity="false">
    <level value="ERROR" />
    <appender-ref ref="eventLog" />
  </logger>

  <logger name="Topshelf">
    <level value="INFO" />
  </logger>

  <logger name="MassTransit">
    <level value="WARN" />
  </logger>

  <logger name="MassTransit.QuartzService">
    <level value="INFO" />
  </logger>

  <logger name="NHibernate">
    <level value="WARN" />
  </logger>

  <appender name="eventLog" type="log4net.Appender.EventLogAppender">
    <applicationName value="MassTransit Quartz Service" />
    <logName value="MassTransit" />
    <threshold value="ERROR" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%thread] %p %logger%n%n%m" />
    </layout>
    <securitycontext type="log4net.Util.WindowsSecurityContext">
      <credentials value="Process" />
    </securitycontext>
    <mapping>
      <level value="ERROR" />
      <eventLogEntryType value="Error" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <eventLogEntryType value="Information" />
    </mapping>
  </appender>

  <appender name="logFile" type="log4net.Appender.RollingFileAppender">
    <file value="..\log\masstransit-quartzservice-" />
    <appendToFile value="true" />
    <datePattern value="yyyyMMdd-HH.lo\g" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="3" />
    <maximumFileSize value="1MB" />
    <preserveLogFileNameExtension value="true" />
    <param name="StaticLogFileName" value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd hh:mm:ss.fff} %-5level [%thread] %m%n" />
    </layout>
  </appender>

  <appender name="console" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <foreColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <foreColor value="Yellow, HighIntensity" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <foreColor value="White" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <foreColor value="Cyan" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%m%n" />
    </layout>
  </appender>
</log4net>